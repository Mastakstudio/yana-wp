                        +e.item-input
                            +e.LABEL.item-label Пол
                            +e.pol-inner
                                +e.LABEL.pol-container
                                    | Ж
                                    input(type='radio' checked='checked' name='radio')
                                    +e.SPAN.pol-checkmark
