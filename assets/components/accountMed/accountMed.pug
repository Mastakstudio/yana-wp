mixin accountMed()
    +b.accountMed
        .container
            +e.links
                +links()
            +e.inner
                +e.content
                    +title('Личный кабинет')(class='title_blue')
                    +text('Здесь вы можете добавить либо изменить информацию о себе. Данная информация необходима для формирования и регистрации в базе данных официального Сертификата о прохождении курса.')(class='text_black')
        +e.wrapper
            +image()(src=require('./../images/pers.png'))
        .container
            +e.FORM.list(id="accountMed__form")
                +e.item
                    +e.item-inputs
                        +e.item-input
                            +form-input('ФИО/ Ник')(name='name' type='text' value="Эллоида")
                        +e.item-input
                            +form-input('Место работы')(name='place' type='text')
                        +e.item-input
                            +form-input('Профессия')(name='prof' type='text')
                        +e.item-input
                            +form-input('Специальность')(name='spec' type='text')
                        +e.item-input
                            +e.LABEL.item-label Дата рождения
